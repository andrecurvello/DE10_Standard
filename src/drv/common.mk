################################################################################
#                       MINER common build template                            #
################################################################################
all : $(addsuffix .o,$(OBJS))
%.o : %.c
	$(CC) $(CFLAGS) $(IPATH) $(LPATH) -c $< -o $@
	cp $@ $(BUILD_DIR)
	
clean:
	rm -f *.a *.o *~ 
